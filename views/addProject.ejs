<!-- Awal form Add Project -->
<div
  class="form-container d-flex justify-content-center align-items-center"
  style="background-color: #cecdcd"
>
  <form class="form-container" action="/addProject" method="POST">
    <h4 class="text-center m-3 fw-bold text-uppercase">Add My Project</h4>
    <div class="mb-4">
      <label for="input-title" class="form-label">Project Name</label>
      <input
        type="text"
        class="form-control"
        id="input-title"
        placeholder="Your Project Name"
        name="projectName"
      />
    </div>

    <div class="d-flex justify-content-between mt-4">
      <div class="mb-4">
        <label for="startDate">Start Date</label>
        <input
          id="startDate"
          class="form-control date-input"
          type="date"
          name="startDate"
          placeholder="dd/mm/yyyy"
          data-date-format="dd/mm/yy"
        />
      </div>
      <div class="mb-4">
        <label for="endDate">End Date</label>
        <input id="endDate" class="form-control" type="date" name="endDate" />
      </div>
    </div>

    <div class="mb-4">
      <label for="input-description" class="form-label">Description</label>
      <textarea
        class="form-control"
        id="input-description"
        rows="2"
        name="description"
      ></textarea>
    </div>

    <div class="mb-2">
      <label class="form-check-label" for="nodejs"> Technologies </label>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-6 form-check">
          <input
            class="form-check-input"
            type="checkbox"
            id="nodejs"
            name="nodejs"
            value="nodejs"
          />
          <label class="form-check-label" for="nodejs"> Node Js </label>
        </div>

        <div class="col-md-6 form-check">
          <input
            class="form-check-input"
            type="checkbox"
            id="nextjs"
            name="nextjs"
            value="nextjs"
          />
          <label class="form-check-label" for="nextjs"> Next Js </label>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 form-check">
          <input
            class="form-check-input"
            type="checkbox"
            id="reactjs"
            name="reactjs"
            value="reactjs"
          />
          <label class="form-check-label" for="reactjs"> React Js </label>
        </div>

        <div class="col-md-6 form-check mb-4">
          <input
            class="form-check-input"
            type="checkbox"
            id="typescript"
            name="typescript"
            value="typescript"
          />
          <label class="form-check-label" for="typescript">TypeScript </label>
        </div>
      </div>
    </div>

    <div class="mb-4">
      <label for="formFile" class="form-label">Upload Image</label>
      <input class="form-control" type="file" id="formFile" name="formFile" />
    </div>

    <div class="d-flex justify-content-end mb-3 mt-3">
      <button
        class="btn text-white rounded-pill ps-4 pe-4"
        style="background-color: rgb(0, 0, 0)"
        type="submit"
      >
        Submit
      </button>
    </div>
  </form>
</div>

